<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>ASK AI Mistral</title>
    
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/highlight.js/11.5.1/styles/default.min.css">
   
    <!-- Bootstrap 5 CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">

    <!-- FontAwesome for Icons -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">

    <!-- Custom CSS -->
    <link rel="stylesheet" href="/style.css">
    <style>
        /* Increase Chat Box Size */
        .chat-container {
            height: 80vh; /* Adjusted for better readability */
            display: flex;
            flex-direction: column;
            justify-content: space-between;
            padding: 20px;
        }

        .input-area {
            display: flex;
            gap: 10px;
            background-color: #f1f1f1; /* Light background for better contrast */
            padding: 10px;
            border-radius: 8px;
        }

        #user-input {
            flex-grow: 1;
            background-color: #ffffff; /* Ensure a white input field */
            color: #000; /* Text color black */
            border: 1px solid #ddd;
            padding: 8px;
            border-radius: 5px;
        }

        #user-input::placeholder {
            color: #6c757d; /* Darker placeholder for better visibility */
        }

        /* Updated Navbar for Bigger "ASK AI" */
        .navbar-brand {
            font-size: 1.5rem;
            font-weight: bold;
            letter-spacing: 1px;
        }

        /* Styling for Copy Button */
        .copy-button {
            background: none;
            border: none;
            color: #007bff;
            cursor: pointer;
            font-size: 14px;
            margin-left: 10px;
        }

        .copy-button:hover {
            color: #0056b3;
        }
        #user-input::placeholder {
    color: white !important;
    opacity: 1; /* Ensures it is fully visible */
    }

    </style>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/highlight.js/11.5.1/highlight.min.js"></script>
</head>
<body>

    <!-- ✅ Navbar -->
    <nav class="navbar navbar-dark bg-dark">
        <div class="container-fluid">
            <button class="btn btn-outline-light me-3" id="sidebar-toggle">
                <i class="fas fa-bars"></i>
            </button>
            <a class="navbar-brand text-light mx-auto" href="#">ASK AI Mistral 7B</a>
        </div>
    </nav>

    <!-- ✅ Sidebar -->
    <div class="sidebar" id="sidebar">
        <button id="close-sidebar" class="btn btn-light">
            <i class="fas fa-times"></i>
        </button>
        <ul class="nav flex-column">
            <li class="nav-item"><a href="#" class="nav-link text-light">Home</a></li>
            <li class="nav-item"><a href="#" class="nav-link text-light">Settings</a></li>
            <li class="nav-item"><a href="#" class="nav-link text-light">About</a></li>
        </ul>
    </div>

    <!-- ✅ Main Chat Container -->
    <div class="container-fluid chat-container">
        <div class="chat-box" id="chat-box"></div>

        <!-- ✅ Input Area -->
        <div class="input-area">
            <textarea id="user-input" class="form-control" placeholder="Type your message..." rows="1"></textarea>
            <button id="send-button" class="btn btn-primary">
                <i class="fas fa-arrow-up"></i>
            </button>
        </div>
    </div>

    <!-- ✅ JavaScript Files -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="/script.js"></script>
    <!-- Highlight.js for Syntax Highlighting -->

<script src="https://cdnjs.cloudflare.com/ajax/libs/highlight.js/11.5.1/highlight.min.js"></script>

</body>
</html>
